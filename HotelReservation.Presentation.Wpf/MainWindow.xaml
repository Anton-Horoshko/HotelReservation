<Window x:Class="HotelReservation.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Reservation System" Height="720" Width="1280"
        Background="#F8FAFC">
    <DockPanel>
        <!-- Top sidebar -->
        <StackPanel Orientation="Horizontal" Background="#D9EAFD" DockPanel.Dock="Top" Height="45">
            <TextBlock Text="Hotel Reservation" Foreground="Black" 
                       FontSize="16" Padding="10" VerticalAlignment="Center" />
            <Button Content="Rooms" Style="{StaticResource SideBarButton}" Margin="5,0" VerticalAlignment="Bottom"/>
            <Button Content="Reservations" Style="{StaticResource SideBarButton}" Margin="5,0" VerticalAlignment="Bottom"/>
            <Button Content="Guests" Style="{StaticResource SideBarButton}" Margin="5,0" VerticalAlignment="Bottom"/>
        </StackPanel>

        <!-- Main content -->
        <StackPanel Margin="20">
            <TextBlock Text="Rooms" FontSize="20" Margin="0,0,0,10"/>
            <ListBox x:Name="RoomsList" Height="500"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add Room" Style="{StaticResource ContentButton}" Margin="0,0,10,0"/>
                <Button Content="Delete Room" Style="{StaticResource ContentButton}"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
